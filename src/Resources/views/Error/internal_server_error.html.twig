{% extends "@ContaoCore/Error/layout.html.twig" %}
{% block title %}
    {% if statusName is not empty %}
        {{ statusName }}
    {% else %}
        {{ error.error }}
    {% endif %}
{% endblock %}
{% block matter %}
    {% if exception is not empty %}
        <p>{{ exception }}</p>
    {% else %}
        <p>{{ error.errorOccurred }}</p>
    {% endif %}
{% endblock %}
{% block howToFix %}
    {% if exception is empty %}
        <p>{{ error.errorFixOne|raw }}</p>
    {% endif %}
{% endblock %}
{% block explain %}
    {% if exception is empty %}
        <p>{{ error.errorExplain|raw }}</p>
    {% endif %}
{% endblock %}

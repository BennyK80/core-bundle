html {
    background: #fff;
}

body {
    font: 1em "Open Sans", Helvetica, sans-serif;
    font-weight: 300;
    color: #333;
    margin: 0;
    padding: 0;
}

a, a:visited {
    text-decoration: none;
    color: #e4790f;
}

a:hover {
    text-decoration: underline;
}

h1, h2, h3 {
    font-weight: 100;
}

h1 {
    font-size: 3em;
    margin: 0;
    padding-bottom: 2%;
}

h2, h3 {
    font-size: 1.5em;
}

#header {
    padding: 12px 0 10px;
}

#content {
    background-color: #eee;
    padding: 3% 0;
}

#footer {
    font-size: 0.75em;
    text-align: center;
    padding: .5em 0;
    color: #999;
}

.wrap {
    width: 50%;
    margin: 0 auto;
    overflow: hidden;
}

.header-logo {
    display: inline-block;
}

.search {
    display: inline-block;
    float: right;
    margin: 21px 6px 0 0;
}

.block-error {
    -moz-border-radius: 16px;
    -webkit-border-radius: 16px;
    border-radius: 16px;
    margin-bottom: 20px;
    background-color: #fff;
    border: 1px solid #dfdfdf;
    padding: 15px 28px 24px;
    word-wrap: break-word;
    overflow: hidden;
}

.block-error:before {
    float: left;
    content: "</";
    font-size: 5em;
    color: #ccc;
}

.block-error .inner {
    padding-left: 15%;
}

input, button {
    background: #fff;
    padding: 3px 6px 3px;
    border: 1px solid #dfdfdf;
    border-radius: 3px;
    line-height: 16px;
}

input[type="search"] {
    width: 15em;
    margin-right: 3px;
}

label img {
    position: relative;
    top: 3px;
    margin-right: 3px;
}
